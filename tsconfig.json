{
  "compilerOptions": {
    "target": "ES2016",
    "types": [
      "requirejs",
    ],
    "typeRoots": [
      "./types"
    ],
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "removeComments": true,
    "stripInternal": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["dist", "docs"],
}
