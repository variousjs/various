{
  "name": "@variousjs/various",
  "version": "0.6.1",
  "description": "RequireJS(AMD) + React",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "unpkg": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "nyc": {
    "exclude": [
      "examples/*"
    ],
    "excludeAfterRemap": true
  },
  "types": "index.d.ts",
  "scripts": {
    "lint": "tsc --noemit && eslint . --ext .ts,.tsx,.js",
    "prestart": "mkdir -p demo/dist && cp demo/empty.js demo/dist/empty.js",
    "start": "webpack --config webpack/components.js --progress & webpack serve --config webpack/index.js --progress",
    "prebuild": "npm run lint",
    "build": "NODE_ENV=production webpack --config webpack/index.js --progress",
    "cy:run": "cypress run",
    "ci": "start-server-and-test start http://127.0.0.1:2333 cy:run",
    "cypress": "cypress open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/variousjs/various.git"
  },
  "keywords": [
    "requirejs",
    "amd",
    "react"
  ],
  "author": "LoeiFy <LoeiFy@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/variousjs/various/issues"
  },
  "homepage": "https://github.com/variousjs/various#readme",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@babel/runtime-corejs3": "^7.14.8",
    "@cypress/code-coverage": "^3.9.12",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.3.2",
    "@types/requirejs": "^2.1.33",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-istanbul": "^6.1.1",
    "cypress": "^9.4.1",
    "eslint": "^7.31.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "start-server-and-test": "^1.14.0",
    "typescript": "^4.4.2",
    "webpack": "^5.60.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3"
  },
  "dependencies": {
    "nycticorax": "^3.0.2"
  }
}
